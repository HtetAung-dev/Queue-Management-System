                <h5 class="card-title text-center">@commondata.ConstantName["counter5"]</h5>
                <p class="card-text text-center text-primary">@tickets[5]</p>
            </div>
        </div>

    </div>
</div>
<div class="container queue-container">
    <div class="align-items-center">
        <h4 class="text-center">@commondata.ConstantName["nextToken"]</h4>
        <h2 class="text-center text-danger">@tickets[0]</h2>
    </div>
</div>
</div>
@section Scripts {
<script type="text/javascript">
    $(document).ready(function() {
        var idleInterval = setInterval("reloadpage()", 5000); //5 seconds
    })
